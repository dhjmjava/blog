<?xml version="1.0" encoding="UTF-8" ?>  <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.blog.mapper.BlogCommentsMapper">    <sql id="attrs">       id , ip ,content , comment_time , is_use , blog_id    </sql>    	<insert id="saveComment" parameterType="com.blog.entity.BlogComments">	     insert into t_blog_comments(ip,content,comment_time,is_use,blog_id)         values(#{ip},#{content},#{comment_time},#{is_use},#{blog_id})	     	</insert>		<select id="queryComments" resultType="com.blog.entity.BlogComments">	   select <include refid="attrs"/> from t_blog_comments where blog_id = #{id}	</select>		<delete id="deleteComment" parameterType="long">	   delete from t_blog_comments where id = #{id}	</delete></mapper>  