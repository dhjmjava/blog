<?xml version="1.0" encoding="UTF-8" ?>  <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.blog.mapper.BloggerMapper">	   <select id="queryBloggerInfoById" parameterType="long" resultType="com.blog.entity.Blogger">      select * from t_blogger where id=#{id}   </select>	      <select id="getAllBlogger" resultType="com.blog.entity.Blogger">      select * from t_blogger   </select>      <update id="updateBloggerInfo" parameterType="com.blog.entity.Blogger">      update t_blogger set name=#{name},userName=#{userName},email=#{email},`describe`=#{describe},motto=#{motto} where id =#{id}   </update>	</mapper>  